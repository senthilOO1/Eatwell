<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ViewFlipper
                android:id="@+id/flipper1"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:flipInterval="3000"

                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"
                android:layout_centerInParent="true"
                ><ImageView
                android:src="@drawable/idli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="fffff"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                />

                <ImageView
                    android:src="@drawable/dosas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="sssss"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    />

                <ImageView
                    android:src="@drawable/sapathi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    />



            </ViewFlipper>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="-25dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/firstDot"
                android:src="@drawable/nondot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:contentDescription="fffff"
                android:padding="5dp"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/secondDot"
                android:src="@drawable/nondot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:contentDescription="sssss"
                android:padding="5dp"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/thridDot"
                android:src="@drawable/nondot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:padding="5dp"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
